<div class="main-page">

	<div class="product-form">
		<h3 class="product-form__title"> Formulario de Producto </h3>
		<%= form_for [:user, @product], class: 'product-form__form' do |f| %>

		  <div class="product-form__field">
	      <%= f.label :name, 'Nombre', { class: 'product-form__label' } %>
	      <%= f.text_field :name, { class: 'product-form__input' } %>
	    </div>

	    <div class="product-form__field">
	      <%= f.label :price, 'Precio', { class: 'product-form__label' } %>
	      <%= f.number_field :price, { class: 'product-form__input' } %>
	    </div>

	    <div class="product-form__field">
	      <%= f.file_field :image, { class: 'product-form__input product-form__input--image' } %>
	      <%= f.label :image, 'Elije una foto', { class: 'product-form__label product-form__label--image' } %>
	    </div>

		  <%= f.submit "#{@product.new_record? ? 'Agregar' : 'Editar'} producto", class: 'product-form__button' %>

		<% end  %>
	</div>
</div>
