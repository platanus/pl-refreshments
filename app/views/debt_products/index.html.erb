<div class="main-page debts-index">
  <%= render 'shared/navigation' %>

  <div id="products-index-table-container" class="products-index__table-container">
  <% flash.each do |_, msg| %>
    <%= content_tag :div, msg, class: 'alert alert-success' if msg.is_a?(String) %>
  <% end %>

    <% if @debt_products.length > 0 %>
        <h3>Deudas Pendientes </h3>
        <table class="products-index__table">
        <thead>
          <tr>
            <th class> Imagen </th>
            <th class="products-index__table-header"> Deudor </th>
            <th class="products-index__table-header"> Producto </th>
            <th class="products-index__table-header"> Precio (CLP) </th>
            <th class="products-index__table-header"> Pagado </th>
          </tr>
        </thead>
        <tbody>
          <% @debt_products.each do |debt_product| %>
            <% if debt_product.paid == false %>
              <%= render "row", debt_product: debt_product %>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <h3 class="products-index__subtable-header"> Deudas Saldadas </h3>
        <table class="products-index__table">
        <thead>
          <tr>
            <th class> Imagen </th>
            <th class="products-index__table-header"> Deudor </th>
            <th class="products-index__table-header"> Producto </th>
            <th class="products-index__table-header"> Precio (CLP) </th>
            <th class="products-index__table-header"> Pagado </th>
          </tr>
        </thead>
        <tbody>
          <% @debt_products.each do |debt_product| %>
            <% if debt_product.paid == true %>
              <%= render "row", debt_product: debt_product %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="products-index__message">	No tienes deudas para mostrar  </p>
    <% end %>
  </div>
</div>