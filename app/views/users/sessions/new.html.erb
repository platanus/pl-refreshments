<div class="registration-page">
  <div class="registration-page__registration-form-container registration-form-container">
    <h3 class="registration-form-container__registration-title"> Login </h3>
    <%- flash.each do |_, msg| -%>
      <%= content_tag :div, msg, class: 'registration__flash-message registration__flash-message--error' if msg.is_a?(String) %>
    <%- end -%>
    <%= form_for(resource,
      as: resource_name,
      url: user_session_path,
      html: { class: 'registration-form-container__registration-form registration-form' }
    ) do |f| %>

      <div class="registration-form__field">
        <%= f.label :email, 'Email', class: 'registration-form__label' %>
        <%= f.email_field :email, autofocus: true, class: 'registration-form__input', autocomplete: 'email' %>
      </div>

      <div class="registration-form__field">
        <%= f.label :password, 'Contraseña', class: 'registration-form__label' %>
        <%= f.password_field :password, class: 'registration-form__input', autocomplete: 'current-password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="registration-form__checkbox-field">
          <%= f.check_box :remember_me, id: 'user_remember_me', class: 'registration-form__checkbox-input' %>
          <%= f.label :remember_me, "Recuérdame", class: 'registration-form__checkbox-label' %>
        </div>
      <% end -%>

      <%= f.submit "Ingresar", class: 'registration-form__submit-button' %>

    <% end %>
  <div>
</div>
