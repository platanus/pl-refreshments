<div class="main-page registration-page">
<div class="registration-page__registration-form-container registration-form-container">
<h3 class="registration-form-container__registration-title"> Editar Perfil </h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="registration-form__field">
    <%= f.label :email, class: 'registration-form__label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'registration-form__input' %>
  </div>

  <div class="registration-form__field">
    <%= f.label :slack_user, "Id de Slack", class: 'registration-form__label' %>
    <%= f.text_field :slack_user, autofocus: true, autocomplete: "Id de Slack", class: 'registration-form__input' %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="registration-form__field">
    <%= f.label :password, class: 'registration-form__label' %> <i>(dejar campo vacío para no cambiarla)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: 'registration-form__input' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres min. </em>
    <% end %>
  </div>

  <div class="registration-form__field">
    <%= f.label :password_confirmation, class: 'registration-form__label' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'registration-form__input' %>
  </div>

  <div class="registration-form__field">
    <%= f.label :current_password, class: 'registration-form__label' %> <i>(es necesaria su contraseña actual para confirmar los cambios)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'registration-form__input' %>
  </div>

  <div class="actions">
    <%= f.submit "Actualizar", class: 'registration-form__submit-button' %>
  </div>
<% end %>

<br>

<h3>Cancelar cuenta</h3>

<p> :( <%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'registration-form__submit-button' %></p>

<%= link_to "Back", :back %>
</div>
</div>