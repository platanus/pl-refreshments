<%= semantic_form_for [:admin, @user_product], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs do %>
    <%= f.input :user, as: :select, collection: User.all.pluck(:email, :id) %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :active %>
    <%= f.input :stock %>
    <%= f.input :category, as: :select, collection: UserProduct.categories.keys.map{|category| [category.titleize, category]} %>
    <%= f.input :image, as: :file %>
    <%= f.actions %>
  <% end  %>
<% end  %>
