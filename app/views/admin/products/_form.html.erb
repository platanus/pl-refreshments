<%= semantic_form_for [:admin, @product], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :active %>
    <%= f.input :image, as: :file %>
    <%= f.input :user, as: :select, collection: User.all.pluck(:email, :id) %>
    <%= f.actions %>
  <% end  %>
<% end  %>
