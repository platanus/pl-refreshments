<div class='modal-header'>
	<h4 class='modal-header__title'> Acá te pagamos usando el rayo </h4>
  <button type='button' class='close' data-dismiss='modal' aria-hidden='true'> × </button>
</div>
<%= form_for @lightning_network_withdrawal, url: user_lightning_network_withdrawals_path, remote: true do |f| %>
  <div class='modal-body'>

    <div class='modal-body__field'>
      <%= f.label :invoice_hash, 'Pega acá el hash del invoice', { class: 'modal-body__label' } %>
      <%= f.text_field :invoice_hash, { class: 'modal-body__input' }%>
    </div>

  </div>
  <div class='modal-footer'>
    <%= f.submit 'Retirar', class: 'modal-footer__button' %>
  </div>
<% end %>